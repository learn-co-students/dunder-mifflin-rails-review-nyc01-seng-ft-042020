<h1>Edit Employee Form</h1>
<% if flash[:my_error] %>
    <% flash[:my_error].each do |error|  %>
        <p><%= error %></p> 
    <% end %>
<% end %>

<%= form_for @employee do |f| %>
    <%= f.label "first_name" %>
    <%= f.text_field "first_name" %><br/>

    <%= f.label "last_name" %>
    <%= f.text_field "last_name" %><br/>

    <%= f.label "alias" %>
    <%= f.text_field "alias" %><br/>

    <%= f.label "title" %>
    <%= f.text_field "title" %><br/>

    <%= f.label "img_url" %>
    <%= f.text_area "img_url" %><br/>

    <%= f.label "dog_id" %>
    <%= f.collection_select :dog_id, @dogs, :id, :name %>

    <%= f.submit %>

<% end %>